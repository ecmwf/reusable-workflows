{
  "name": "reusable-workflows",
  "version": "1.2.0",
  "description": "A collection of reusable GitHub workflows for ECMWF repositories",
  "scripts": {
    "lint": "eslint --fix .github",
    "lint-no-fix": "npm run lint -- --no-fix",
    "version": "auto-changelog && git add CHANGELOG.md"
  },
  "git": {
    "pre-commit": [
      "lint-no-fix"
    ]
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecmwf/reusable-workflows"
  },
  "devDependencies": {
    "@vercel/git-hooks": "^1.0.0",
    "auto-changelog": "^2.5.0",
    "eslint": "^9.39.2",
    "eslint-plugin-json-schema-validator": "^6.2.0",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-yaml": "^1.1.3"
  },
  "eslintConfig": {
    "extends": [
      "plugin:json-schema-validator/recommended"
    ],
    "rules": {
      "json-schema-validator/no-invalid": [
        "error",
        {
          "useSchemastoreCatalog": true
        }
      ]
    }
  },
  "auto-changelog": {
    "commitLimit": 99,
    "hideCredit": true,
    "package": true,
    "template": "keepachangelog"
  },
  "type": "module"
}
